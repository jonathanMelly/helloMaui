<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ViewModels="clr-namespace:HelloMaui1.ViewModels"
             x:Class="HelloMaui1.Animate1"
             Title="Animate1">
    
    
	<ContentPage.BindingContext> 
		<ViewModels:Animate1ViewModel/>
	</ContentPage.BindingContext>
    
    
    <VerticalStackLayout>

        <Grid>
            <Label Text="{Binding Text}" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"
       Margin="0,50,0,0" x:Name="backElement"  
       BackgroundColor="Blue" WidthRequest="150" HeightRequest="150" Scale="0" />

            <Label Text="{Binding Text}" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"
                   Margin="0,50,0,0" x:Name="frontElement"  
                   BackgroundColor="red" WidthRequest="150" HeightRequest="150" />
            
            
        </Grid>
        

        <Button Margin="15,50,15,10" Text="{Binding Text}" Command="{Binding AnimateCommand}" ></Button>

    </VerticalStackLayout>
</ContentPage>