    <ContentPage.Resources>
        <Style TargetType="Button" x:Key="BPress">
            <Style.Triggers>
                <Trigger TargetType="Button"
                     Property="IsPressed"
                     Value="True">
                    <Setter Property="Scale" Value="0.5" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </ContentPage.Resources>

    <VerticalStackLayout Spacing="10">

        <Button Text="Click me!" Style="{StaticResource BPress}">

        </Button>


        <Button Text="quitter" MaximumWidthRequest="100" />

        <Grid WidthRequest="100" HeightRequest="100">
            <BoxView Grid.Row="0" Grid.Column="0" />
            <BoxView Grid.Row="0" Grid.Column="1" Color="Red" />
            <BoxView Grid.Row="1" Grid.Column="0" Color="Blue" />
            <BoxView Grid.Row="1" Grid.Column="1" />
        </Grid>

        <Entry Text="Votre nom" MaximumWidthRequest="250" />

        <Button Text="Click me!" Style="{StaticResource ButtonPressed}">
        </Button>

        

    </VerticalStackLayout>
